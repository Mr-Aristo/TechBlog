@using TechBlogUI.Areas.Admin.Models
@model RoleUpdateViewModel 


@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Update Role</h1>

<form method="post">

    <div class="form-group">
        <label> Role </label>
        <input type="text" name="ID" value="@Model.ID" class="form-control"/>
    </div>
    
    <div class="form-group">
        <label> Role Name </label>
        <input type="text" name="Name" value="@Model.Name" class="form-control"/>
    </div>
    <button class="btn btn-outline-success">Save Update</button>
</form>

