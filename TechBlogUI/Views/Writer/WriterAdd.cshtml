@model TechBlogUI.Models.AddProfileImage
@{
    ViewData["Title"] = "WriterAdd";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<form class="form-group" method="post" enctype="multipart/form-data"> @* multipart kismi resimlerin dosyaya kaydedilmesi icin kullanilan bir komut*@
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Writer</h4>
                <br />

                @Html.HiddenFor(x=>x.WriterID, new {@class="form-control"})

                <div class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputName1">Имя</label>
                        @Html.TextAreaFor(x=>x.WriterName,new{@class="form-control"})
                        @Html.ValidationMessageFor(x=>x.WriterName)

                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail3">Почта</label>
                        @Html.TextAreaFor(x=>x.WriterMail ,new{@class="form-control"})
                        @Html.ValidationMessageFor(x=>x.WriterMail)
                    </div>

                    <div class="form-group ">
                        <label for="exampleInputPassword4">Пароль</label>
                        @Html.PasswordFor(x=>x.WriterPassword,new{@class="form-control"})
                        @Html.ValidationMessageFor(x=>x.WriterPassword)
                    </div>

                    @*    <div class="form-group">
                    <label for="exampleSelectGender">Gender</label>
                    <select class="form-control" id="exampleSelectGender">
                    <option>Male</option>
                    <option>Female</option>
                    </select>
                    </div>*@

                    <div class="form-group">
                        <label>Upload Image</label>
                        <input type="file" name="WriterImage"/>
                    </div>



                    <div class="form-group">
                        <label for="exampleTextarea1">About</label>
                        @Html.TextAreaFor(x=>x.WriterAbout,10,3,new{@class="form-control"})
                    </div>
                    <button type="submit" class="btn btn-gradient-primary mr-2">Сохрани</button>


                </div>
            </div>
        </div>
    </div>

</form>

