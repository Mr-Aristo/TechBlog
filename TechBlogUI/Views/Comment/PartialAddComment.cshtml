
<!--Comment Partial-->



<div class="comment-top">
    <h4>Комментировайте</h4>
    <div class="comment-bottom">

        <form action="/Comment/PartialAddComment/" method="post">

            <input class="form-control" type="text" name="CommentUserName" placeholder="Name" required="">
            <input class="form-control" type="email" name="CommentTitle" placeholder="Email" required="" />

            <textarea class="form-control" name="CommentContent" placeholder="Message..." required=""></textarea>
            <button type="submit" class="btn btn-primary submit">Представить</button>

        </form>

    </div>
</div>




