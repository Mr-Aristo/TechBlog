@model IEnumerable<EntityLayer.Concrete.Comment>

<h1>Комментария</h1>

<div class="comment-top">
    @if (Model.Count() > 0)
    {
        <h4>Комментарий</h4>
    }
    else
    {
        <h4>Leave a first comment</h4>
    }

    @foreach (var item in Model)
    {

        <div class="media">
            <img src="/CoreBlogTema/web/images/t3.jpg" alt="" class="img-fluid" />
            <div class="media-body">
                <h5 class="mt-0">@item.CommentUserName</h5>

                <p>
                    @item.CommentContent
                </p>

            </div>
        </div>

    }

</div>  