@model EntityLayer.Concrete.Writer
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

@* SweatAlert sitesinden aldigimiz js kaynagi.  *@
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<script src="~/lib/jquery/dist/jquery.js"></script>


<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Зарегистрировать</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                @*<form method="post"> Alttaki using le bu form blogunun yerinene yaptik*@

                @*Index, viewimizin adi register, controler adi, formMethod yapilacak islemin adi*@
                @using (Html.BeginForm("Index", "Register", FormMethod.Post))
                {
                    <div class="form-row">

                        <div class="col-md-6 mb-3">
                            <label for="validationCustom01">Имя </label>

                            @*  <input type="text" class="form-control" id="validationDefault01" name="WriterName" placeholder="" required="">
                        </div   Bu kismi using kullandigimiz icin kaldiriyoruz textbox koyacagiz*@>

                            @Html.TextBoxFor(x=>x.WriterName,new {@class="form-control"})
                            @Html.ValidationMessageFor(x=> x.WriterName,"", new {@class="text-danger"}) @* "" olan kismi bir parametre atamak zorunda oldugumuz icin atadik aksi hlade new kismi kullanilmaz*@

                        </div>

                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02">Ваша Почта</label>

                            @*name="" kismi dogru olamali cunki db deki column ismine gore valitadion yapacak*@
                            @*<input type="email" class="form-control" name="WriterMail" id="validationDefault02" placeholder="" required="">*@

                            @Html.TextBoxFor(x=>x.WriterMail, new {@class="form-control"}) @*Input type yerine textboxfor kullandik. Using ile baslayan kisimdan dolayi boyle kullanmamiz gerekli.*@
                            @*Tasarim bu yapidan dolayi bozuldu. Duzelymek icin  new {} kismini kullanarak css deki classi cagiracagiz*@
                            @Html.ValidationMessageFor(x=> x.WriterMail,"", new {@class="text-danger"}) @*Validasyon icinher inputun turune gore validate yaptik*@
                        </div>
                    </div>

                    <div class="form-row">

                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Пароль</label>
                            @* <input type="password" class="form-control" name="WriterPassword" id="password1" placeholder="" required="">*@
                            @Html.TextBoxFor(x=>x.WriterPassword,new {@class="form-control"})
                            @Html.ValidationMessageFor(x=> x.WriterPassword,"", new {@class="text-danger"})
                        </div>


                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword2 mb-2"> Путь Изображении</label>
                            @*  <input type="text" class="form-control" name="WriterImage" id="password2" placeholder="" required="">*@
                            @Html.TextBoxFor(x=>x.WriterImage,new {@class="form-control"})
                            @Html.ValidationMessageFor(x=> x.WriterImage,"", new {@class="text-danger"})
                        </div>

                        @*<div class="form-group col-md-6">
                    <label for="exampleInputPassword2 mb-2">Sehirler</label>
                    <input type="text" class="form-control" name="WriterImage" id="password2" placeholder="" required="">
                    </div>*@

                    </div>

                    <button type="submit" class="btn btn-primary submit mb-4">Зарегистрироваться </button>
                    <p>
                        <a href="#" id="btn1">Нажав Зарегистрироваться, я соглашаюсь с вашими условиями !</a>
                    </p>





                }
            </div>
        </div>

    </div>

    <!--Sweet Alert kullanimi -->
    <script>
        $('#btn1').click(function() {
            swal("Политика Страницы", "Вы получите письмо с нашего веб-сайта.");
        });
    </script>

</section>